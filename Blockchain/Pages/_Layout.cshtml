@namespace Blockchain.Pages
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta content="width=device-width, initial-scale=1.0" name="viewport"/>
    <base href="~/"/>
    <script src="https://cdn.tailwindcss.com"></script>
    <component render-mode="ServerPrerendered" type="typeof(HeadOutlet)"/>
</head>
<body>
@RenderBody()

<div class="bg-lightyellow bottom-0 fixed hidden left-0 px-5 py-2.5 shadow-top w-full z-50" id="blazor-error-ui">
    <environment include="Staging,Production">
        An error has occurred. This application may no longer respond until reloaded.
    </environment>
    <environment include="Development">
        An unhandled exception has occurred. See browser dev tools for details.
    </environment>
    <a class="reload" href="">Reload</a>
    <a class="absolute cursor-pointer right-3 top-2">🗙</a>
</div>

<script src="_framework/blazor.server.js"></script>
</body>
</html>